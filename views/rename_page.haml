%form(action="/pages/#{@page["name"]}/rename" method="post")
  %input(type="hidden" name="_method" value="put")
  - if flash[:error]
    .error= flash[:error]
  %p
    Enter the new name:
    %input(type="text" name="new_name" value="#{params[:new_name]}")
  %p
    = button_tag "commit", "Rename", :class => "submit"
    = button_link_to "Cancel", "/#{@page["name"]}", :class => "cancel"