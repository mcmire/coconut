= haml :header, :layout => false

%h1= @title

%form(action="/pages/#{@page["name"]}" method="post")
  %input(name="_method" value="delete" type="hidden")
  %p Are you sure you want to delete this page?
  %p.buttons
    %input(type="submit" name="commit" value="Yes")
    %a(href="/#{@page["name"]}") No

